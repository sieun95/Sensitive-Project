    <body id="page-top">
        <header>
            <%-include('header.ejs')%>
        </header>
    <!-- Section-->    
    <section class="py-5">    
        <div class="container px-4 px-lg-5 mt-5">            
            <div class="row gx-4 gx -lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% product.forEach(function (value){ %>
                    <div class="col mb-5" >                                          
                        <div class="card h-100">                    
                            <!-- Product image <a href="./product_detail/"> -->
                            <a style="cursor:pointer;"><%= value.user_name %></a>
                            <!-- Product image <a href="./product_detail/"> -->
                            <a style="cursor:pointer;"><img src="<%= value.path1 %>" class="img-fluid"/></a>
                            <!-- Product details-->
                            <div class="card-body p-1">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%= value.name %></h5>
                                    <!-- Product price--><%= value.quantity %>
                                    <br>
                                    <h5>1EA</h5>
                                </div>
                            </div><!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                     <h5><%= value.price %>Ïõê</h5>                            
                                </div>
                            </div>
                        </div>                        
                        <br>
                        <h5 style="text-align: center;">Ordered Successfully !</h5>
                        <br>
                    </div>
                <% }); %>            
            </div>
        </div>    
    </section>
    <footer>
        <%-include('footer.ejs')%>
